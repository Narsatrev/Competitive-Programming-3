import java.util.*;
import java.io.*;

public class Main {
	public static void main(String[] args){
		Scanner s=new Scanner(System.in);
		int g=Integer.parseInt(s.nextLine().split(" ")[0]);
		String x=s.nextLine().split(" ")[1];
		int m=0;
		String y="";
		String sub_y="";
		
		while(s.hasNextLine()){
			m=x.length()/g;			
			for(int i=0;i<x.length();i+=m){
				sub_y=x.substring(i,i+m-1);
				for(int j=0;j<m;j++){
					y+=sub_y;
				}				
			}
			g=Integer.parseInt(s.nextLine().split(" ")[0]);
			x=s.nextLine().split(" ")[1];				
		}
		System.out.println(y);
		
	}
}
